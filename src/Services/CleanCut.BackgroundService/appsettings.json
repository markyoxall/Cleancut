{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "CleanCut.BackgroundService": "Debug",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "BackgroundService": {
    "IntervalMinutes": 5,
    "IdentityServer": {
      "Authority": "https://localhost:5001",
      "ClientId": "cleancut-background-service",
      "ClientSecret": "BackgroundServiceSecret2024!",
      "Scope": "CleanCutAPI"
    },
    "Api": {
      "BaseUrl": "https://localhost:7142",
      "ProductsEndpoint": "/api/v1/products",
      "TimeoutSeconds": 30
    },
    "Csv": {
      "OutputDirectory": "exports",
      "FileNamePattern": "products_{0:yyyyMMdd_HHmmss}.csv",
      "IncludeHeaders": true,
      "KeepOldFiles": true,
      "MaxOldFiles": 10
    }
  }
}
