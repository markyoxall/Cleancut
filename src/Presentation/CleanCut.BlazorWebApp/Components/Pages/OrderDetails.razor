@page "/orders/details/{Id:guid}"
@using CleanCut.Application.DTOs
@using Microsoft.AspNetCore.Components
@inject IOrdersApiService OrdersApi
@inject NavigationManager Navigation
@inject ILogger<OrderDetails> Logger
@rendermode @(new InteractiveServerRenderMode(prerender: true))
<PageTitle>Order Details - CleanCut</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice-dollar me-2"></i>Order Details</h2>
        <button class="btn btn-outline-secondary" @onclick="BackToStore">Back to Store</button>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5 text-muted">Loading...</div>
    }
    else if (NotFound)
    {
        <div class="alert alert-warning">Order not found.</div>
    }
    else if (Order is not null)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Order Number:</strong> @Order.OrderNumber
                    </div>
                    <div class="col-md-6 text-md-end">
                        <strong>Order Date:</strong> @Order.OrderDate.ToString("g")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Status:</strong> @Order.StatusName
                    </div>
                    <div class="col-md-6 text-md-end">
                        <strong>Total:</strong> @Order.TotalAmount.ToString("C")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Shipping:</strong>
                        <div class="text-muted">@Order.ShippingAddress</div>
                    </div>
                    <div class="col-md-6">
                        <strong>Billing:</strong>
                        <div class="text-muted">@Order.BillingAddress</div>
                    </div>
                </div>

                @if (Order.OrderLineItems?.Any() == true)
                {
                    <h5 class="mt-4">Items</h5>
                    <ul class="list-group">
                        @foreach (var li in Order.OrderLineItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold">@li.ProductName</div>
                                    <div class="text-muted small">@li.Quantity x @li.UnitPrice.ToString("C")</div>
                                </div>
                                <div>@(li.Quantity * li.UnitPrice).ToString("C")</div>
                            </li>
                        }
                    </ul>
                }

                @if (!string.IsNullOrWhiteSpace(Order.Notes))
                {
                    <div class="mt-3">
                        <strong>Notes</strong>
                        <div class="text-muted">@Order.Notes</div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private OrderInfo? Order;
    private bool IsLoading;
    private bool NotFound;

    protected override async Task OnParametersSetAsync()
    {
        IsLoading = true;
        NotFound = false;
        Order = null;

        try
        {
            Order = await OrdersApi.GetOrderAsync(Id);
            if (Order is null)
            {
                NotFound = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load order {OrderId}", Id);
            NotFound = true;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void BackToStore() => Navigation.NavigateTo("/store");
}
