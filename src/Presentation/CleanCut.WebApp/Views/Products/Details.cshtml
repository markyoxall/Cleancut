@model CleanCut.WebApp.Models.Products.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-box text-success"></i> Product Details
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="product-icon mb-3">
                            <i class="fas fa-box fa-4x text-success"></i>
                        </div>
                        <div>
                            @if (Model.Product.IsAvailable)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> Available
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-times"></i> Unavailable
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-md-8">
                        <table class="table table-borderless">
                            <tr>
                                <th width="150">Product Name:</th>
                                <td><strong>@Model.Product.Name</strong></td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>@Model.Product.Description</td>
                            </tr>
                            <tr>
                                <th>Price:</th>
                                <td><strong class="text-success fs-5">@Model.Product.Price.ToString("C")</strong></td>
                            </tr>
                            <tr>
                                <th>Product ID:</th>
                                <td><code>@Model.Product.Id</code></td>
                            </tr>
                            <tr>
                                <th>Created:</th>
                                <td>@Model.Product.CreatedAt.ToString("MMMM d, yyyy 'at' h:mm tt")</td>
                            </tr>
                            @if (Model.Product.UpdatedAt.HasValue)
                            {
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>@Model.Product.UpdatedAt.Value.ToString("MMMM d, yyyy 'at' h:mm tt")</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Product.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit Product
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Product.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user text-primary"></i> Product Owner
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Owner != null)
                {
                    <div class="text-center">
                        <div class="avatar-large mb-3">
                            @Model.Owner.FirstName.Substring(0, 1).ToUpper()@Model.Owner.LastName.Substring(0, 1).ToUpper()
                        </div>
                        <h6>@Model.Owner.FirstName @Model.Owner.LastName</h6>
                        <p class="text-muted">
                            <a href="mailto:@Model.Owner.Email" class="text-decoration-none">
                                @Model.Owner.Email
                            </a>
                        </p>
                        <div class="mb-3">
                            @if (Model.Owner.IsActive)
                            {
                                <span class="badge bg-success">Active User</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive User</span>
                            }
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Owner.Id" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> View Owner Details
                            </a>
                            <a asp-controller="Products" asp-action="Index" asp-route-userId="@Model.Owner.Id" 
                               class="btn btn-sm btn-outline-success">
                                <i class="fas fa-box"></i> View Owner's Products
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="fas fa-user-question fa-2x mb-2"></i>
                        <p>Owner information not available</p>
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-line text-info"></i> Product Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h6 class="text-muted">Status</h6>
                            @if (Model.Product.IsAvailable)
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle"></i> Available
                                </span>
                            }
                            else
                            {
                                <span class="text-warning">
                                    <i class="fas fa-pause-circle"></i> Unavailable
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-6">
                        <h6 class="text-muted">Price Range</h6>
                        @if (Model.Product.Price <= 50)
                        {
                            <span class="text-success">
                                <i class="fas fa-dollar-sign"></i> Budget
                            </span>
                        }
                        else if (Model.Product.Price <= 200)
                        {
                            <span class="text-warning">
                                <i class="fas fa-dollar-sign"></i> Mid-range
                            </span>
                        }
                        else
                        {
                            <span class="text-danger">
                                <i class="fas fa-dollar-sign"></i> Premium
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .avatar-large {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #007bff;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
            margin: 0 auto;
        }
        
        .product-icon {
            padding: 20px;
        }
    </style>
}