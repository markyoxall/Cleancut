@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">
        <i class="fas fa-cut text-primary"></i> Welcome to CleanCut
    </h1>
    <p class="lead">Enterprise-grade application with Clean Architecture</p>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card h-100 border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-users"></i> User Management
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage users in the system with full CRUD operations.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> View all users</li>
                    <li><i class="fas fa-check text-success"></i> Create new users</li>
                    <li><i class="fas fa-check text-success"></i> Edit user details</li>
                    <li><i class="fas fa-check text-success"></i> Search and filter</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Users" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i> Manage Users
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card h-100 border-success">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-box"></i> Product Management
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage products with pricing and availability.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> View all products</li>
                    <li><i class="fas fa-check text-success"></i> Create new products</li>
                    <li><i class="fas fa-check text-success"></i> Edit product details</li>
                    <li><i class="fas fa-check text-success"></i> Filter by user</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Products" asp-action="Index" class="btn btn-success">
                    <i class="fas fa-arrow-right"></i> Manage Products
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Enterprise Features
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6><i class="fas fa-layer-group text-primary"></i> Clean Architecture</h6>
                        <p class="small">Domain-driven design with clear separation of concerns</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-exchange-alt text-success"></i> CQRS Pattern</h6>
                        <p class="small">Command Query Responsibility Segregation with MediatR</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-rocket text-warning"></i> Redis Caching</h6>
                        <p class="small">High-performance caching with automatic fallback</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="fas fa-shield-alt text-danger"></i> Error Handling</h6>
                        <p class="small">Comprehensive error handling and logging</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
