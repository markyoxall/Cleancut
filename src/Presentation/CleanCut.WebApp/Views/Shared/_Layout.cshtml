<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CleanCut Web Application</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CleanCut.WebApp.styles.css" asp-append-version="true" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<i class="fas fa-cut"></i> CleanCut
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
								<i class="fas fa-home"></i> Home
							</a>
						</li>
						@if (User.Identity?.IsAuthenticated == true)
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-white" href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fas fa-cogs"></i> Management
								</a>
								<ul class="dropdown-menu" aria-labelledby="managementDropdown">
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">
											<i class="fas fa-users"></i> Customer Management
										</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">
											<i class="fas fa-box"></i> Product Management
										</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action="Index">
											<i class="fas fa-flag"></i> Country Management
										</a>
									</li>
								</ul>
							</li>
						}
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
								<i class="fas fa-shield-alt"></i> Privacy
							</a>
						</li>
						<li class="nav-item">
					<a class="nav-link text-white" asp-page="/Contact">
						<i class="fas fa-envelope"></i> Contact
					</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" asp-page="/FAQ">
								<i class="fas fa-envelope"></i> FAQ
							</a>
						</li>
					</ul>

					<!-- ✅ Add Authentication Status -->
					<ul class="navbar-nav">
						@if (User.Identity?.IsAuthenticated == true)
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fas fa-user"></i> @(User.Identity.Name ?? "User")
								</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
									<li><h6 class="dropdown-header">Logged in as @(User.Identity.Name ?? "User")</h6></li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item" asp-controller="Account" asp-action="Profile">
											<i class="fas fa-user"></i> Profile
										</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
											@Html.AntiForgeryToken()
											<button type="submit" class="dropdown-item">
												<i class="fas fa-sign-out-alt"></i> Logout
											</button>
										</form>
									</li>
								</ul>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link text-white" href="/Account/Login">
									<i class="fas fa-sign-in-alt"></i> Login
								</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		@if (TempData["ErrorMessage"] != null)
		{
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted bg-light mt-5">
		<div class="container py-3">
			<div class="row">
				<div class="col-md-6">
					&copy; 2025 - CleanCut Web Application
				</div>
				<div class="col-md-6 text-end">
					<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
					<a href="/health" target="_blank">Health Check</a>
				</div>
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
