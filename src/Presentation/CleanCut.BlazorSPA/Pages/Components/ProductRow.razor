@using CleanCut.BlazorSPA.Pages.Models

<tr @key="Product.Id">
    <td>@Product.Name</td>
    <td>@Product.Category</td>
    <td>@(Product.Price is null ? "-" : $"{Product.Price.Amount:F2} {Product.Price.Currency}")</td>
    <td>@(Product.IsAvailable ? "Yes" : "No")</td>
    <td>
        <button class="btn btn-sm btn-outline-primary me-2" @onclick="OnEditClicked">Edit</button>
        <button class="btn btn-sm btn-outline-danger" @onclick="ShowDeleteConfirm">Delete</button>
    </td>
</tr>

<ConfirmModal Visible="ShowConfirm" Title="Delete Product" Message="@($"Delete product {Product.Name}?")" OnClose="OnConfirmClose">
</ConfirmModal>

