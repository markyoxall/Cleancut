{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
     "Microsoft.AspNetCore.Authentication": "Warning",
        "System": "Warning"
   }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=#{AZURE_SQL_SERVER}#;Database=#{IDENTITY_DATABASE}#;Authentication=Active Directory Default;Encrypt=True;TrustServerCertificate=False"
  },
  "IdentityServer": {
    "SigningCertificateThumbprint": "#{SIGNING_CERT_THUMBPRINT}#",
    "Clients": {
      "CleanCutBlazorWebApp": {
    "Secret": "#{BLAZOR_CLIENT_SECRET}#",
        "RedirectUris": ["#{BLAZOR_BASE_URL}#/signin-oidc"],
     "PostLogoutRedirectUris": ["#{BLAZOR_BASE_URL}#/signout-callback-oidc"],
        "FrontChannelLogoutUri": "#{BLAZOR_BASE_URL}#/signout-oidc",
        "AllowedCorsOrigins": ["#{BLAZOR_BASE_URL}#"]
      },
      "CleanCutWebApp": {
        "Secret": "#{WEBAPP_CLIENT_SECRET}#",
      "RedirectUris": ["#{WEBAPP_BASE_URL}#/signin-oidc"],
        "PostLogoutRedirectUris": ["#{WEBAPP_BASE_URL}#/signout-callback-oidc"],
        "FrontChannelLogoutUri": "#{WEBAPP_BASE_URL}#/signout-oidc",
        "AllowedCorsOrigins": ["#{WEBAPP_BASE_URL}#"]
      },
      "m2m.client": {
        "Secret": "#{M2M_CLIENT_SECRET}#"
      }
    }
  },
  "Authentication": {
    "Google": {
      "ClientId": "#{GOOGLE_CLIENT_ID}#",
      "ClientSecret": "#{GOOGLE_CLIENT_SECRET}#"
    }
  },
  "AllowedOrigins": ["#{BLAZOR_BASE_URL}#", "#{WEBAPP_BASE_URL}#"]
}